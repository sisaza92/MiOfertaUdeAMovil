<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewGrupoHorario"
        android:text=""
        android:backgroundTint="@color/Verde_UdeA"
        android:background="@color/Verde_UdeA"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewCupos"
        android:text=""
        android:backgroundTint="@color/Verde_UdeA"
        android:background="@color/Verde_UdeA"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewAula"
        android:text="Aula: "
        android:backgroundTint="@color/Verde_UdeA"
        android:background="@color/Verde_UdeA"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textViewProfesor"
        android:text="Nombre del Profesor: "
        android:backgroundTint="@color/Verde_UdeA"
        android:background="@color/Verde_UdeA"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp" />

</LinearLayout>