<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="udea.edu.co.miofertaudea.vista.activity.TempLoginActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="244dp"
        android:layout_height="220dp"
        android:adjustViewBounds="true"
        android:src="@drawable/escudo_udea"
        android:layout_gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Cedula"
        android:imeOptions="actionSend"
        android:gravity="center"
        android:id="@+id/ETloginCedulaEstudiante"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese El Semestre Academico"
        android:imeOptions="actionSend"
        android:gravity="center"
        android:id="@+id/ETloginSemestreAcademico"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Consultar Oferta"
        android:onClick="consultarOferta"
        android:id="@+id/BTloginConsultar"/>

</LinearLayout>
